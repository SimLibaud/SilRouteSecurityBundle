{
    "name": "sil/route-security-bundle",
    "type": "symfony-bundle",
    "description": "Provide a way to secure accesses to all routes of an symfony application.",
    "keywords": ["symfony", "bundle", "security", "access", "control", "route", "role"],
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Libaud",
            "email": "simonlibaud@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.0 || ^7.0",
        "symfony/security-core": "^6.0 || ^7.0",
        "symfony/yaml": "^6.0 || ^7.0",
        "symfony/expression-language": "^6.0 || ^7.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/twig-bundle": "^6.0 || ^7.0",
        "symfony/security-bundle": "^6.0 || ^7.0",
        "symfony/browser-kit": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sil\\RouteSecurityBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
